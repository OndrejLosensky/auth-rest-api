{
    "compilerOptions": {
      "module": "NodeNext",
      "outDir": "build",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }